{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <header>
        <h2 class="text-center mb-5 display-4 text-primary fw-bold text-shadow">{{ 'title.choose_language'|trans }}</h2>
    </header>
    <hr>
    <div class="row gy-5 row-cols-md-4 row-cols-lg-6 justify-content-center">
        {% for locale in app_locales|split('|') %}
            <div class="text-center">
                <a href="{{ path('app_index', {_locale: locale}) }}">
                    {% if locale == "en" %}
                        <span class="fi fi-gb fs-1"></span>
                    {% else %}
                        <span class="fi fi-{{ locale }} fs-1"></span>
                    {% endif %}
                    <h5 class="mt-3 text-uppercase">{{ locale }}</h5>
                </a>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
