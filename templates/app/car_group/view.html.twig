{% extends 'base.html.twig' %}

{% block title %}{{ 'entity.carGroup.name'|trans }}{{ carGroup.gid }}{% endblock %}

{% block body %}
    <div class="container">
        <header>
            <h2 class="text-center mb-3 display-5 text-primary fw-bold text-shadow">{{ 'title.worker_form'|trans }}</h2>
            <h3 class="text-center mb-2 display-7 text-primary fw-bold text-shadow">{{ 'entity.carGroup.name'|trans }}
                : {{ carGroup.gid }}</h3>
        </header>
        <hr>
        {{ form_start(end, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_widget(end) }}
        {{ form_end(end) }}
        <div class="row">
            <section class="mb-5">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </section>
        </div>
    </div>
{% endblock %}
