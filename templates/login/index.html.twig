{% extends 'base.html.twig' %}

{% block title %}{{ 'main.login'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        <form action="{{ path('app_login') }}" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">{{ 'main.login'|trans }}</h1>
            <div class="mb-3">
                <label class="form-label" for="inputEmail">Email</label>
                <input type="email" value="{{ email }}" name="_username" id="inputEmail" class="form-control" required autocomplete="username">
            </div>
            <div class="mb-3">
                <label class="form-label" for="inputPassword">{{ 'main.password'|trans }}</label>
                <input type="password" name="_password" id="inputPassword" class="form-control" required autocomplete="current-password">
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
            <input type="hidden" name="go_to" value="{{ path('admin') }}">
            {#<input type="hidden" name="back_to" value="{{ path('app_login') }}">

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}
            <div class="mb-3">
                <a href="{{ path('app_forgot_password_request') }}">{{ 'entity.user.forgot_password'|trans }}</a>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">
                    {{ 'main.login'|trans }}
                </button>
            </div>
        </form>
    </div>
{% endblock %}